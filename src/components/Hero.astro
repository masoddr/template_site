---
interface Props {
  title: string;
  description: string;
  ctaText: string;
  ctaLink: string;
  imageSrc?: string;
}

const { 
  title,
  description,
  ctaText,
  ctaLink,
  imageSrc = "/images/hero-illustration.svg"
} = Astro.props;
---

<section class="relative bg-gradient-to-br from-blue-50 to-indigo-50 overflow-hidden">
  <div class="absolute inset-0 bg-grid-pattern opacity-10"></div>
  
  <div class="container mx-auto px-4 py-20 md:py-32">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Contenu textuel -->
      <div class="relative z-10">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6 leading-tight">
          {title}
        </h1>
        <p class="text-xl text-gray-600 mb-8 max-w-xl">
          {description}
        </p>
        <div class="flex flex-wrap gap-4">
          <a 
            href={ctaLink}
            class="inline-flex items-center px-8 py-4 rounded-lg bg-blue-600 text-white font-semibold hover:bg-blue-700 transition-colors"
          >
            {ctaText}
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
          <a 
            href="#services"
            class="inline-flex items-center px-8 py-4 rounded-lg bg-white text-gray-900 font-semibold hover:bg-gray-50 transition-colors border border-gray-200"
          >
            En savoir plus
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Image -->
      <div class="relative">
        <div class="relative z-10">
          <img 
            src={imageSrc} 
            alt="Hero illustration" 
            class="w-full h-auto rounded-2xl shadow-2xl"
            width="600"
            height="400"
          />
        </div>
        <!-- Éléments décoratifs -->
        <div class="absolute -top-6 -right-6 w-32 h-32 bg-blue-500 rounded-full opacity-20 blur-2xl"></div>
        <div class="absolute -bottom-6 -left-6 w-32 h-32 bg-indigo-500 rounded-full opacity-20 blur-2xl"></div>
      </div>
    </div>
  </div>
</section>

<style>
  .bg-grid-pattern {
    background-image: linear-gradient(to right, #e5e7eb 1px, transparent 1px),
                      linear-gradient(to bottom, #e5e7eb 1px, transparent 1px);
    background-size: 24px 24px;
  }
</style> 